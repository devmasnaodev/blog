---
// props: { id: string }
const { id } = Astro.props;
---
<div class="video-container">
  <iframe 
    src={`https://www.youtube.com/embed/${id}`} 
    frameborder="0" 
    allowfullscreen 
    loading="lazy"
    width="560" 
    height="315"
  ></iframe>
</div>

<style>
  .video-container {
    position: relative;
    padding-bottom: 56.25%;
    height: 0;
    overflow: hidden;
    max-width: 100%;
  }

  .video-container iframe {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }
</style>
